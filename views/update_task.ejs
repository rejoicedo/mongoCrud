<!-- Include Header-->
<%- include('include/_header.ejs') %>
<!-- /Include Header-->

    <!-- Main -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i>All ToDo Tasks</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Your Task</h2>
                <span class="text-light">Use the form below to change your Tasks</span>
            </div>
            
            <!-- Add user form -->

                        <!-- Form Handling -->
                        <form action="/" id="update_task" method="post">
                            <div class="new-task">
                                <div class="form-group">
                                    <label for="title" class="text-light">Title</label>
                                    <input type="hidden" name="id" value="">
                                    <input type="text" name="title" id="" value="" placeholder="What is your ToDo Task">
                                </div>
                                <div class="form-group">
                                    <label for="description" class="text-light">Description</label>
                                    <input type="hidden" name="id" value="">
                                    <input type="text" name="description" id="" value="" placeholder="Describe ToDo Task">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn text-dark update">Update Task</button>
                                </div>
                            </div>
                        </form>
                        <!-- /Form Handling -->
            
            <!-- /Add user form -->
        </div>
    </main>
    <!-- /Main -->

<!-- Include Footer-->
    <%- include('include/_footer.ejs') %>
